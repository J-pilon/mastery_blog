<div class="relative w-full max-w-4xl mx-auto mt-8">
    <%= render partial: "shared/back_button" %>

    <div class="space-y-4">
            <% if @article.image_url %>
                <div class="w-[720px] h-auto">
                    <img src=<%= @article.image_url %> alt="" class="object-cover">
                </div>
            <% end %>

        <div class="flex flex-row items-center justify-between">
            <h1 class="">
                <%= @article.title %>
            </h1>
            
            <div>
                <%= button_to "publish", publish_article_path(@article), class: "text-secondary" if @article.drafted? %>
            </div>
        </div>

        <p>
            <%= @article.body %>
        </p>

    </div>

    <div class="flex justify-between mt-32 align-center">
        <%= button_to "Delete", article_path(@article), form: { data: { turbo_confirm: "Are you sure you want to delete this article?" }}, method: :delete, class: "btn-outline btn-lg" %>
        <%= link_to "Edit", edit_article_path(@article), class: "btn-primary btn-lg" %>
    </div>
</div>