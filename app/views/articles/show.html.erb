<div class="w-full bg-indigo-50 min-h-screen md:px-20 pt-6">

    <div id="link-to-home" class="max-w-2xl mx-auto mt-4 mb-8 flex justify-center align-center">
        <%= link_to "Home", articles_path, class: "w-full border-2 border-black text-black text-center px-4 py-2 rounded-md text-1xl font-medium hover:bg-black hover:text-white transition duration-300" %>
    </div>

    <div class=" bg-white rounded-md px-6 py-10 max-w-2xl mx-auto">
        <h1 class="text-center text-2xl font-bold text-gray-500 mb-10">
            <%= @article.title %>
        </h1>

        <div class="space-y-4">
            <p>
                <%= @article.body.html_safe %>
            </p>

            <div class="flex justify-center align-center">
                <%= link_to "Edit", edit_article_path(@article), class: "border-2 border-blue-500 mr-4 text-black px-4 py-2 rounded-md text-1xl font-medium hover:bg-blue-500 transition duration-300" %>
                <%= button_to "Delete", article_path(@article), form: { data: { turbo_confirm: "Are you sure you want to delete this article?" }}, method: :delete, class: "h-full bg-red-600 text-white px-4 py-2 rounded-md text-1xl font-medium hover:bg-red-700 transition duration-300" %>
           </div>
        </div>
    </div>
</div>