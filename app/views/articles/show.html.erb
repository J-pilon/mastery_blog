<div class="relative w-full max-w-4xl mx-auto mt-8 mb-12 rounded-lg shadow-lg">
    <%= render partial: "shared/back_button" %>

    <div class="space-y-4">
            <% if @article.image_url %>
                <div class="w-full max-h-[600px] overflow-hidden flex justify-center items-center rounded-t-lg">
                    <img src=<%= image_url(@article.image_url) %> alt="" class="object-contain">
                </div>
            <% end %>

        <div class="flex flex-row items-center justify-between px-8">
            <h1 class="">
                <%= @article.title %>
            </h1>
            
            <div>
                <%= button_to "Publish", publish_article_path(@article), class: "text-secondary" if @article.drafted? %>
            </div>
        </div>

        <p class="px-8">
            <%= @article.body %>
        </p>

    </div>

    <div class="flex justify-between px-8 pb-8 mt-32 align-center">
        <%= button_to "Delete", article_path(@article), form: { data: { turbo_confirm: "Are you sure you want to delete this article?" }}, method: :delete, class: "btn-outline btn-lg" %>
        <%= link_to "Edit", edit_article_path(@article), class: "btn-primary btn-lg" %>
    </div>
</div>