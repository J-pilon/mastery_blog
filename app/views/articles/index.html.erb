<div class="container">
    <h1>Articles Homepage</h1>

    <% @articles.each do |article| %>

        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">
                    <%= link_to article.title, article %>
                </h5>

                <p class="card-text"> <%= article.body %> </p>
            </div>

            <div> <%= link_to "New Article", new_article_path, class: "btn btn-primary d-flex justify-content-center" %> </div>
        </div>

    <% end %>


</div>