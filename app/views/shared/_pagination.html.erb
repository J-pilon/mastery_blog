<div class="max-w-2xl mx-auto flex justify-center">
	<nav>
		<ul class="inline-flex -space-x-px">
      <% if  pagination.prev_page? %>
        <li class="bg-white border border-gray-300 text-gray-500 hover:bg-gray-100 hover:text-gray-700 ml-0 rounded-l-lg leading-tight py-2 px-3 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
          <%= link_to 'First', articles_path(page: 1)%>
        </li>
        
        <li class="bg-white border border-gray-300 text-gray-500 hover:bg-gray-100 hover:text-gray-700 ml-0 leading-tight py-2 px-3 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
          <%= link_to '< Previous', articles_path(page: pagination.prev_page)%>
        </li>
      <% else %>
        <li class="bg-white border border-gray-300 text-gray-500 hover:bg-gray-100 hover:text-gray-700 ml-0 rounded-l-lg leading-tight py-2 px-3 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
          First
        </li>
        
        <li class="bg-white border border-gray-300 text-gray-500 hover:bg-gray-100 hover:text-gray-700 ml-0 leading-tight py-2 px-3 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
          &#60; Previous
        </li>
      <% end %>

      <li class="flex flex-row bg-white border border-gray-300 text-gray-50 leading-tight py-2 px-3 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400">
        <%= "Page #{pagination.page} of #{pagination.total_pages}" %>

        <form method="GET" action="/articles" class="ml-2">
          <select id="per-page-selector" name="per_page" onchange="this.form.submit()">
            <option <%= ("selected" if pagination.per_page == 10) %> value="10">10</option>
            <option <%= ("selected" if pagination.per_page == 25) %> value="25">25</option>
            <option <%= ("selected" if pagination.per_page == 50) %> value="50">50</option>
            <option <%= ("selected" if pagination.per_page == 100) %> value="100">100</option>
            <option <%= ("selected" if pagination.per_page == 0) %> value="all">all</option>
          </select>
        </form>
      </li>

      <% if pagination.next_page? %>
        <li class="bg-white border border-gray-300 text-gray-500 hover:bg-gray-100 hover:text-gray-700 leading-tight py-2 px-3 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
          <%= link_to 'Next >', articles_path(page: pagination.next_page) %>
        </li>

        <li class="bg-white border border-gray-300 text-gray-500 hover:bg-gray-100 hover:text-gray-700 rounded-r-lg leading-tight py-2 px-3 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
          <%= link_to 'Last', articles_path(page: pagination.total_pages) %>
        </li>
      <% else %>
        <li class="bg-white border border-gray-300 text-gray-500 hover:bg-gray-100 hover:text-gray-700 ml-0 leading-tight py-2 px-3 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
          Next &#62;
        </li>
        
        <li class="bg-white border border-gray-300 text-gray-500 hover:bg-gray-100 hover:text-gray-700 rounded-r-lg ml-0 leading-tight py-2 px-3 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
          Last
        </li>
      <% end %>
    </ul>
  </nav>
</div>
