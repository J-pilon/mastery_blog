<%= form_with(model: @user, url: users_password_path) do |f| %>
  <div class="flex flex-col items-center w-full h-full mt-16">
    <h1>Enter your email to reset your password.</h1>
    
    <div class="flex flex-col mb-4">
      <%= f.label :email, class: "font-bold mr-4" %>
      <%= f.text_field :email %>
    </div>

    <%= f.submit "Send", class: "btn-primary" %>
  </div>
<% end %>