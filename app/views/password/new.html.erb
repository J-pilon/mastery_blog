<div class="flex flex-col items-center justify-center min-h-screen bg-gray-100">
  <div class="w-full max-w-xl p-8 space-y-8 border rounded-lg shadow-lg border-light-gray">
    <%= form_with(model: @user, url: users_password_path, class: "space-y-8") do |f| %>
        <h2>Enter your email to reset your password.</h2>
        
        <div class="flex flex-col mb-4">
          <%= f.label :email, class: "font-bold mr-4" %>
          <%= f.text_field :email, placeholder: "Email address" %>
        </div>

        <div class="flex items-center justify-between space-x-2">
          <%= f.submit "Reset", class: "btn-lg btn-primary" %>
          <%= link_to "Cancel", :back, class: "btn-lg btn-outline" %>
        </div>
    <% end %>
  </div>
</div>