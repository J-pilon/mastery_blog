<%= form_with(model: @user, url: new_users_password_path(@user), method: :put) do |f| %>
  <div class="flex flex-col items-center w-full h-full mt-16">
    <div class="flex flex-col items-center mb-12">
      <div class="flex flex-col items-start mr-4">
        <%= f.label :password, class: "font-bold mr-4" %>
        <%= f.text_field :password %>
      </div>
      
      <div class="flex flex-col items-start ml-4">
        <%= f.label :password_confirmation, class: "font-bold mr-4" %>
        <%= f.text_field :password_confirmation %>
      </div>
    </div>

    <div><%= f.submit "Reset Password", class: "btn-primary" %></div>
  </div>
<% end %>