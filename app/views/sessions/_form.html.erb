    <%= form_with(model: @user, url: sessions_path, data: {testid: "signin-form"}, class: "space-y-8") do |f| %>
      <div class="space-y-4 rounded-md shadow-sm">
        <div>
          <% @user.errors.full_messages.any? do |error| %>
            <p class="text-red-500"><%= error %></p>
          <% end %>
        </div>

        <div>
          <%= f.label :email, class: "sr-only" %>
          <%= f.email_field :email, autofocus: true, placeholder: "Email address" %>
        </div>
        
        <div>
          <%= f.label :password, class: "sr-only" %>
          <%= f.password_field :password, placeholder: "Password" %>
        </div>
      </div>

      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "ml-2 text-sm text-gray-900" %>
        </div>

        <div class="flex items-center text-sm">
          <%= link_to 'Forgot your password?', new_users_password_path, class: "btn-link" %>
        </div>
      </div>

      <div>
        <%= f.submit "Sign in", class: "btn-primary btn-full" %>
      </div>
    <% end %>