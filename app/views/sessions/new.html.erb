<div class="flex flex-col items-center justify-center min-h-screen bg-gray-100">
  <div class="w-full max-w-lg p-8 space-y-8 border-transparent rounded-lg shadow-lg">
    <div>
      <h2 class="mt-6 text-3xl font-extrabold text-center text-gray-900">Sign in to your account</h2>
    </div>
    <%= form_with(model: @user, url: sessions_path, data: {testid: "signin-form"}, class: "space-y-8") do |form| %>
      <div class="rounded-md shadow-sm">
        <div>
          <%= form.label :email, class: "sr-only" %>
          <%= form.email_field :email, autofocus: true, placeholder: "Email address", class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
        </div>
        <div>
          <%= form.label :password, class: "sr-only" %>
          <%= form.password_field :password, placeholder: "Password", class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
        </div>
      </div>

      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <%= form.check_box :remember_me, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
          <%= form.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
        </div>

        <div class="flex items-center text-sm">
          <%= link_to 'Forgot your password?', new_users_password_path, class: "btn-link" %>
        </div>
      </div>

      <div>
        <%= form.submit "Sign in", class: "btn-primary btn-full" %>
      </div>
    <% end %>
    <p class="mt-2 text-sm text-center text-gray-600">
      Or <%= link_to "sign up", signup_path, class: "btn-link" %> if you donâ€™t have an account.
    </p>
  </div>
</div>

