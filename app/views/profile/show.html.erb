<div class="flex flex-col items-center w-full h-full mt-16">
  <div class="flex flex-col items-center mb-12">
    <div class="flex items-center justify-center mb-2 overflow-hidden rounded-full w-80 h-80">
      <img 
        src=<%= profile_image_url(@profile) %> 
        alt=""
        class="object-fit">
    </div>
    
    <h1 class="text-4xl font-bold"><%= "#{@profile.first_name} #{@profile.last_name}" %></h1>
  </div>

  <div><%= link_to "Edit Profile", edit_profile_path(id: @profile), class: "btn-lg btn-outline" %></div>
</div>
