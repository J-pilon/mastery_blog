<div class="flex flex-col items-center w-full h-full max-w-4xl mx-auto mt-16">
  <div class="flex flex-col items-center w-full p-8 mb-12 border-2 border-solid rounded-lg shadow-lg border-gray">
    <div class="flex items-center justify-center mb-8 overflow-hidden border-2 border-solid rounded-full shadow-lg border-primary w-80 h-80">
      <img 
        src=<%= profile_image_url(@profile) %> 
        alt="profile image"
        class="object-cover w-full h-full"
      >
    </div>
    
    <div class="flex flex-col items-center justify-start w-full">
      <p class="mb-2 text-2xl text-black"><%= "#{@profile.first_name} #{@profile.last_name}" %></p>
      
      <p class="mb-2 text-xl text-black"><%= @profile.user.email %></p>
      
      <p class="mb-2 text-xl"><%= @profile.bio ? @profile.bio : "Add your bio." %></p>

      <div class="flex items-center justify-between mt-16">
        <%= link_to "Edit Profile", edit_profile_path(id: @profile), class: "mr-2 btn-lg btn-primary" %>

        <%= button_to "Sign Out", signout_path, class: "ml-2 btn-lg border-gray border-solid border text-gray flex items-center justify-center w-auto font-bold border-2 rounded-xl whitespace-nowrap" %>
      </div>
    </div>
  </div>
</div>
